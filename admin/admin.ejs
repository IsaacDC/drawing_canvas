<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="admin.css" />
    <title>Admin</title>
  </head>

  <body>
    <canvas id="canvas"></canvas>

    <section class="iframe-container">
      <iframe id="canvas-viewer" src="/canvas"></iframe>
    </section>

    <section id="data-table">

      <table>
        <thead>
          <tr>
            <th>SessionID</th>
            <th>Session's Drawings</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (drawingData.length === 0) { %>
          <tr>
            <td colspan="3">No data available</td>
          </tr>
          <% } else { %>
             <% const sessionIDs = new Set(); %>
              <%drawingData.forEach(entry => sessionIDs.add(entry.sessionID)); %> 
              <%sessionIDs.forEach(sessionID => { %>
          <tr>
            <td><strong>SessionID: <%= sessionID %></strong></td>
            <td>
              <canvas
                class="session-canvas"
                data-session-id="<%= sessionID %>"
              ></canvas>
            </td>
            <td>
              <button class="delete-btn" data-session-id="<%= sessionID %>">Delete</button>
              <button class="ban-btn" data-session-id="<%= sessionID %>">Ban</button>
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>

      <button id="clear-canvas">Clear Canvas</button>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="admin.js"></script>
    <script src="/public/client.js" type="text/javascript"></script>
    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
  </body>
</html>
